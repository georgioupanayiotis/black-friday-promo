{
    "name": "black-friday-promo",
    "version": "1.0.0",
    "description": "A comprehensive Black Friday promotional library with ribbons, banners, popups, countdown timers, and more. Zero dependencies, fully customizable.",
    "type": "module",
    "main": "dist/black-friday-promo.js",
    "module": "dist/black-friday-promo.esm.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "demo": "npx serve .",
        "build:demo": "npm run build && mkdir -p demo/dist && cp -r dist/* demo/dist/ && cp dist/black-friday-promo.js demo/",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "black-friday",
        "promo",
        "marketing",
        "ribbon",
        "banner",
        "popup",
        "countdown",
        "promotional",
        "toast",
        "marquee",
        "floating-button",
        "badge",
        "ecommerce",
        "sales",
        "conversion"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/black-friday-promo.git"
    },
    "bugs": {
        "url": "https://github.com/yourusername/black-friday-promo/issues"
    },
    "homepage": "https://github.com/yourusername/black-friday-promo#readme",
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@rollup/plugin-typescript": "^11.1.5",
        "rollup": "^4.9.0",
        "rollup-plugin-postcss": "^4.0.2",
        "tslib": "^2.6.2",
        "typescript": "^5.3.3"
    }
}